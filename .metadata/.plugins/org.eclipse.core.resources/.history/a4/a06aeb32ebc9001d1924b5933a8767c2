package chap15_usefulClass;

import java.math.BigDecimal;
import java.math.MathContext;
import java.math.RoundingMode;

public class _17_bigDecimal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//BigDecimal 객체 생성
		BigDecimal bd1 = new BigDecimal(1.0);
		BigDecimal bd2 = BigDecimal.valueOf(3.14);
		
		//반올림 모드
		//divide
		System.out.println(bd2.divide(bd2, 
				new MathContext(3, RoundingMode.CEILING)));
		
		//setScale
		System.out.println(bd2.setScale(5, 
								RoundingMode.FLOOR));
		
		System.out.println(bd1.setScale(4, 
								RoundingMode.UP));
		
		
		
		
		
		
		
		
		
		
	}

}
